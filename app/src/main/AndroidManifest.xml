<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secuso.privacyfriendlypin" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.secuso.privacyfriendlypinmnenomic.EnterPinActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlypinmnenomic.AboutActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlypinmnenomic.HelpActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlypinmnenomic.ShowHintActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="org.secuso.privacyfriendlypinmnenomic.EnterPinActivity">
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlypinmnenomic.tutorial.ShowHintTutorialActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="org.secuso.privacyfriendlypinmnenomic.ShowHintActivity">
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlypinmnenomic.tutorial.EnterPinTutorialActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="org.secuso.privacyfriendlypinmnenomic.EnterPinActivity">
        </activity>
    </application>

</manifest>
