<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one_hint"
            android:text="1&#10;" />

        <Button
            android:id="@+id/button_two_hint"
            android:text="2&#10;ABC" />

        <Button
            android:id="@+id/button_three_hint"
            android:text="3&#10;DEF" />

        <Button
            android:id="@+id/button_four_hint"
            android:text="4&#10;GHI" />

        <Button
            android:id="@+id/button_five_hint"
            android:text="5&#10;JKL" />

        <Button
            android:id="@+id/button_six_hint"
            android:text="6&#10;MNO" />

        <Button
            android:id="@+id/button_seven_hint"
            android:text="7&#10;PQRS" />

        <Button
            android:id="@+id/button_eight_hint"
            android:text="8&#10;TUV" />

        <Button
            android:id="@+id/button_nine_hint"
            android:text="9&#10;WXYZ" />

        <Button
            android:id="@+id/button_zero_hint"
            android:text="0&#10;" />
    </GridLayout>

    <RelativeLayout
        android:id="@+id/show_current_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbers"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/pin_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:text="@string/display_entered_pin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/current_pin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pin_message"
            android:layout_toRightOf="@+id/pin_message"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/show_current_pin"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/wordTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hints_display"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dateTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wordTextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:background="@drawable/hints_display"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/mathTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:background="@drawable/hints_display"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>