<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:text="Your PIN is:"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/pin_message"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/current_pin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/pin_message"
        android:layout_marginTop="30dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:id="@+id/numbers"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp">

        <Button android:text="1"
            android:id="@+id/button_one"/>
        <Button android:text="2"
            android:id="@+id/button_two"/>
        <Button android:text="3"
            android:id="@+id/button_three"/>
        <Button android:text="4"
            android:id="@+id/button_four"/>
        <Button android:text="5"
            android:id="@+id/button_five"/>
        <Button android:text="6"
            android:id="@+id/button_six"/>
        <Button android:text="7"
            android:id="@+id/button_seven"/>
        <Button android:text="8"
            android:id="@+id/button_eight"/>
        <Button android:text="9"
            android:id="@+id/button_nine"/>
        <Button android:text="0"
            android:id="@+id/button_zero"/>
    </GridLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wordTextView"
        android:layout_below="@+id/numbers"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateTextView"
        android:layout_below="@+id/wordTextView"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mathTextView"
        android:layout_below="@+id/dateTextView"/>
</RelativeLayout>